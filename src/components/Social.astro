---
const { platform, username } = Astro.props;
---

<a 
  href={`https://www.${platform}.com/${username}`}
  class="px-4 py-2 font-bold border-3 border-[var(--border)] rounded-md hover:bg-[var(--accent)] hover:text-[var(--bg)] transition-colors capitalize"
  target="_blank"
  rel="noopener noreferrer"
  aria-label={`Visit my ${platform} profile`}
>
  {platform}
</a>
