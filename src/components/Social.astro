---
const { platform, username } = Astro.props;
---

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: var(--accent-color);
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  a:hover {
    background-color: #d8664b;
  }
</style>

<a href={`https://www.${platform}.com/${username}`}>{platform}</a>
